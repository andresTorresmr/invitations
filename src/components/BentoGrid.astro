---
import Modal from "./Modal.astro";
---

<div class="md:mt-20 py-16">
  <Modal />
  <div class="mx-auto px-6 max-w-[90%] text-gray-500">
    <div class="relative">
      <div class="relative grid gap-3 grid-cols-6">
        <button
          data-url="/Bento/lancha.jpg"
          class="clip-container group cursor-pointer col-span-full lg:col-span-2 overflow-hidden flex relative rounded-xl bg-white border border-gray-200 min-h-[250px]"
          data-clip-item
        >
          <img
            src="/Bento/lancha.webp"
            class="w-full h-full object-cover object-center"
            alt=""
          />
        </button>
        <div
          class="cursor-pointer col-span-full sm:col-span-3 lg:col-span-2 overflow-hidden relative rounded-xl bg-white border border-gray-200"
        >
          <img
            data-url="/Bento/abrazo-lado.jpg"
            src="/Bento/abrazo-lado.webp"
            class="clip-container w-full h-full object-cover object-center"
            alt=""
          />
        </div>
        <div
          class="cursor-pointer col-span-full sm:col-span-3 lg:col-span-2 overflow-hidden relative rounded-xl bg-white border border-gray-200"
        >
          <img
            data-url="/Bento/escaleras.jpg"
            src="/Bento/escaleras.webp"
            class="clip-container w-full h-full object-cover object-center"
            alt=""
          />
        </div>

        <div
          class="cursor-pointer col-span-full lg:col-span-1 overflow-hidden flex relative rounded-xl bg-white border border-gray-200 min-h-[300px]"
        >
          <img
            data-url="/Bento/camino-cerca.jpg"
            src="/Bento/camino-cerca.webp"
            class="clip-container w-full h-full object-cover object-center"
            alt=""
          />
        </div>
        <div
          class="cursor-pointer col-span-full sm:col-span-3 lg:col-span-2 overflow-hidden relative rounded-xl bg-white border border-gray-200"
        >
          <img
            data-url="/Bento/abrazo-frontal.jpg"
            src="/Bento/abrazo-frontal.webp"
            class="clip-container w-full h-full object-cover object-center"
            alt=""
          />
        </div>
        <div
          class="cursor-pointer col-span-full sm:col-span-3 lg:col-span-3 overflow-hidden relative rounded-xl bg-white border border-gray-200"
        >
          <img
            data-url="/Bento/camino-lejos.jpg"
            src="/Bento/camino-lejos.webp"
            class="clip-container w-full h-full object-cover object-center"
            alt=""
          />
        </div>
      </div>
    </div>
  </div>
</div>
